<UserControl x:Class="HGUniversal.Controls.ImageTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="using:HGUniversal.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="ImageTextBoxControl"
             d:DesignHeight="300"
             d:DesignWidth="400"
             mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Image Width="17"
               Height="17"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Source="{Binding ElementName=ImageTextBoxControl,
                                Path=ImageSource}"
               Stretch="UniformToFill" />

        <TextBlock Grid.Column="1"
                   Margin="6, 0,0,0"
                   FontSize="18"
                   Text="{Binding ElementName=ImageTextBoxControl,
                                  Path=Text}" />
    </Grid>
</UserControl>
